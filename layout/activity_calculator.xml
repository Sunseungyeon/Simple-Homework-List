<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.minicalculator.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:text="@string/result"
        android:gravity="right"
        android:textSize="30dp"
        android:background="#EAEAEA"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_d"
        android:text="@string/button_d"
        android:layout_below="@id/result"
        android:layout_alignParentRight="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:text="@string/button9"
        android:layout_toLeftOf="@id/button_d"
        android:layout_alignTop="@id/button_d"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:text="@string/button8"
        android:layout_toLeftOf="@id/button9"
        android:layout_alignTop="@id/button9"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:text="@string/button7"
        android:layout_toLeftOf="@id/button8"
        android:layout_alignTop="@id/button8"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_multi"
        android:text="@string/button_multi"
        android:layout_below="@id/button_d"
        android:layout_alignParentRight="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:text="@string/button6"
        android:layout_toLeftOf="@id/button_multi"
        android:layout_alignTop="@id/button_multi"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:text="@string/button5"
        android:layout_toLeftOf="@id/button6"
        android:layout_alignTop="@id/button6"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:text="@string/button4"
        android:layout_toLeftOf="@id/button5"
        android:layout_alignTop="@id/button5"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_minus"
        android:text="@string/button_minus"
        android:layout_below="@id/button_multi"
        android:layout_alignParentRight="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:text="@string/button3"
        android:layout_toLeftOf="@id/button_minus"
        android:layout_alignTop="@id/button_minus"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:text="@string/button2"
        android:layout_toLeftOf="@id/button3"
        android:layout_alignTop="@id/button3"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:text="@string/button1"
        android:layout_toLeftOf="@id/button2"
        android:layout_alignTop="@id/button2"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_p"
        android:text="@string/button_p"
        android:layout_below="@id/button_minus"
        android:layout_alignParentRight="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_e"
        android:text="@string/button_e"
        android:layout_toLeftOf="@id/button_p"
        android:layout_alignTop="@id/button_p"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_c"
        android:text="@string/button_c"
        android:layout_toLeftOf="@id/button_e"
        android:layout_alignTop="@id/button_e"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button0"
        android:text="@string/button0"
        android:layout_toLeftOf="@id/button_c"
        android:layout_alignTop="@id/button_c"
        />
</RelativeLayout>